 CONFIG_ARCH_MISC_INIT=y
@@ -63,6 +62,8 @@ CONFIG_MXC_GPIO=y
 CONFIG_DM_PCA953X=y
 CONFIG_DM_I2C=y
 CONFIG_SYS_I2C_MXC=y
+CONFIG_LED=y
+CONFIG_LED_GPIO=y
 CONFIG_DM_MMC=y
 CONFIG_SUPPORT_EMMC_BOOT=y
 CONFIG_MMC_IO_VOLTAGE=y
@@ -100,6 +101,4 @@ CONFIG_VIDEO_IMX_SEC_DSI=y
 CONFIG_EXT4_WRITE=y
 CONFIG_FAT_WRITE=y
