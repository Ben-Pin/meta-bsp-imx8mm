 dtb-$(CONFIG_ARCH_MXC) += ucm-imx8m-mini.dtb
+dtb-$(CONFIG_ARCH_MXC) += ucm-imx8m-mini-nobt.dtb
 dtb-$(CONFIG_ARCH_MXC) += sb-iotgimx8.dtb
 dtb-$(CONFIG_ARCH_MXC) += sb-iotgimx8-nobt.dtb
 dtb-$(CONFIG_ARCH_MXC) += sb-iotgimx8-can.dtb
diff --git a/arch/arm64/boot/dts/compulab/ucm-imx8m-mini-nobt.dts b/arch/arm64/boot/dts/compulab/ucm-imx8m-mini-nobt.dts
new file mode 100644
index 000000000000..13a6f6d83f1d
--- /dev/null
+++ b/arch/arm64/boot/dts/compulab/ucm-imx8m-mini-nobt.dts
@@ -0,0 +1,12 @@
+/dts-v1/;
+
+#include "ucm-imx8m-mini.dtsi"
+
+/ {
+	model = "CompuLab UCM i.MX8MM board (no bluetooth)";
+	compatible = "cpl,ucm-imx8m-mini", "fsl,imx8mm";
+};
+
+&uart4 {
+    status = "disabled";
+};
